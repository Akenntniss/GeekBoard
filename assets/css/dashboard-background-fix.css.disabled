/* ====================================================================
   CORRECTION DES Z-INDEX ET ARRI√àRE-PLAN
==================================================================== */

/* Container principal avec z-index correct */
.modern-dashboard.futuristic-dashboard-container.futuristic-enabled {
    position: relative;
    z-index: 1;
}

/* Mode nuit - Arri√®re-plan principal visible */
    
    /* Couche d'animation principale - ::before */
    .modern-dashboard.futuristic-dashboard-container.futuristic-enabled::before {
        content: '';
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: 
            radial-gradient(circle at 30% 60%, rgba(0, 212, 255, 0.15) 0%, transparent 60%),
            radial-gradient(circle at 70% 30%, rgba(183, 148, 246, 0.15) 0%, transparent 60%),
            radial-gradient(circle at 20% 20%, rgba(240, 147, 251, 0.1) 0%, transparent 50%);
        pointer-events: none;
        z-index: -1;
        animation: backgroundPulse 6s ease-in-out infinite alternate;
        opacity: 1;
    }
    
    /* Couche de particules - ::after */
    .modern-dashboard.futuristic-dashboard-container.futuristic-enabled::after {
        content: '';
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: 
            url("data:image/svg+xml,%3Csvg width='40' height='40' viewBox='0 0 40 40' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%2300d4ff' fill-opacity='0.06'%3E%3Ccircle cx='20' cy='20' r='1'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E"),
            radial-gradient(circle at 15% 25%, rgba(0, 212, 255, 0.08) 0px, transparent 40%),
            radial-gradient(circle at 85% 75%, rgba(183, 148, 246, 0.08) 0px, transparent 40%),
            radial-gradient(circle at 45% 85%, rgba(240, 147, 251, 0.06) 0px, transparent 35%);
        pointer-events: none;
        z-index: -2;
        animation: starfieldMove 25s linear infinite, particleFloat 15s ease-in-out infinite;
        opacity: 0.9;
    }
}

/* Animations am√©lior√©es */
@keyframes backgroundPulse {
    0% { 
        opacity: 0.8; 
        transform: scale(1);
    }
    50% {
        opacity: 1;
        transform: scale(1.02);
    }
    100% { 
        opacity: 0.9;
        transform: scale(1);
    }
}

@keyframes starfieldMove {
    0% { transform: translateY(0) translateX(0); }
    25% { transform: translateY(-15px) translateX(5px); }
    50% { transform: translateY(-30px) translateX(-5px); }
    75% { transform: translateY(-45px) translateX(3px); }
    100% { transform: translateY(-60px) translateX(0); }
}

@keyframes particleFloat {
    0%, 100% { 
        transform: translate(0, 0) rotate(0deg) scale(1); 
        opacity: 0.8; 
    }
    25% { 
        transform: translate(8px, -8px) rotate(90deg) scale(1.1); 
        opacity: 1; 
    }
    50% { 
        transform: translate(-4px, 4px) rotate(180deg) scale(0.9); 
        opacity: 0.9; 
    }
    75% { 
        transform: translate(-8px, -4px) rotate(270deg) scale(1.05); 
        opacity: 1; 
    }
}

/* ====================================================================
   CORRECTION DES CARTES POUR NE PAS MASQUER L'ARRI√àRE-PLAN
==================================================================== */

    .statistics-container {
        background: rgba(22, 33, 62, 0.85) !important;
        backdrop-filter: blur(20px) !important;
        -webkit-backdrop-filter: blur(20px) !important;
        border: 1px solid rgba(255, 255, 255, 0.15) !important;
        position: relative;
        z-index: 2;
    }
    
    /* R√®gle supprim√©e pour permettre l'effet glassmorphism des boutons d'action */
    /* .action-card.futuristic-action-btn sera g√©r√© par action-buttons-modern.css */
    
    .stat-card.futuristic-stat-card {
        background: rgba(22, 33, 62, 0.8) !important;
        backdrop-filter: blur(15px) !important;
        -webkit-backdrop-filter: blur(15px) !important;
        border: 2px solid rgba(255, 255, 255, 0.1) !important;
