        z-index: 2;
    }
    
    .table-section.futuristic-table-container {
        background: rgba(22, 33, 62, 0.85) !important;
        backdrop-filter: blur(20px) !important;
        -webkit-backdrop-filter: blur(20px) !important;
        border: 2px solid rgba(255, 255, 255, 0.1) !important;
        position: relative;
        z-index: 2;
    }
}

/* ====================================================================
   AM√âLIORATION DE LA VISIBILIT√â DES EFFETS
==================================================================== */

    body {
        background: #0a0a1a !important;
    }
    
    /* Assurer que le header n'interf√®re pas */
    .navbar,
    .header,
    nav {
        background: rgba(15, 15, 35, 0.95) !important;
        backdrop-filter: blur(20px) !important;
        -webkit-backdrop-filter: blur(20px) !important;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1) !important;
        position: relative;
        z-index: 100;
    }
    
    /* S'assurer que les modals sont au-dessus */
    .modal {
        z-index: 1050;
    }
    
    .modal-backdrop {
        z-index: 1040;
    }
}

/* ====================================================================
   EFFETS ADDITIONNELS POUR PLUS DE DYNAMISME
==================================================================== */

    .modern-dashboard.futuristic-dashboard-container.futuristic-enabled {
        box-shadow: 
            inset 0 0 100px rgba(0, 212, 255, 0.03),
            inset 0 0 200px rgba(183, 148, 246, 0.02);
    }
    
    /* Effet de bordure anim√©e sur le container */
    .modern-dashboard.futuristic-dashboard-container.futuristic-enabled::before {
        border: 1px solid transparent;
        border-image: linear-gradient(45deg, 
            rgba(0, 212, 255, 0.2), 
            rgba(183, 148, 246, 0.2), 
            rgba(240, 147, 251, 0.2), 
            rgba(0, 212, 255, 0.2)
        ) 1;
        border-radius: 0;
    }
}

/* ====================================================================
   RESPONSIVE ET PERFORMANCE
==================================================================== */

/* R√©duction des effets sur mobile pour pr√©server la batterie */
@media (max-width: 768px) {
        
        .modern-dashboard.futuristic-dashboard-container.futuristic-enabled::before {
            animation: backgroundPulse 10s ease-in-out infinite alternate;
        }
    }
}

/* Respect des pr√©f√©rences de mouvement r√©duit */
@media (prefers-reduced-motion: reduce) {
    .modern-dashboard.futuristic-dashboard-container.futuristic-enabled::before,
    .modern-dashboard.futuristic-dashboard-container.futuristic-enabled::after {
        animation: none !important;
    }
}
